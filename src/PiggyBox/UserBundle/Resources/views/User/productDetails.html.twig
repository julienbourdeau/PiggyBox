{% if product.prices|length >0 %}
	{% for price in product.prices %}
		{% if price.slicenbr == '' %}
		<div class="row-fluid">
		    <div class="span12 text-right">
				<form class="form-inline" action="{{ path('monmagasin_mesproduits_update', {'id': product.id}) }}" method="post" {{ form_enctype(form) }}>
					{{form_widget(form.quantity)}}	
		        <button href="{{path('cart_add_product', {product_id : product.id, price_id : price.id})}}" class="btn btn-primary"><i class="icon-plus icon-white"></i> Ajouter</button>
				</form>
		    </div>
		</div>
		{% else %}
		<div class="row-fluid">
		    <div class="span12">
		        <table class="table table-bordered pricing">
		            <tbody>
		                <tr>
		                    <th class="span2">Découpe <br><small>Pièce</small></th>
		                    <th class="span4">Poids</th>
		                    <th class="span2">Prix</th>
		                    <th class="span2">Prix <br><small>au Kg</small></th>
		                    <th class="span3"></th>
		                </tr>
		
		    			{% set product_id = product.id%}
		    				{% for price in product.prices %}
		        	        	<tr>
		    						{% if price.slicenbr|length %}
		    							<td>{{price.slicenbr}}</td>
		    						{% endif %}
		
		    						{% if price.totalweight|length %}
		                	    		<td>{{price.totalweight}}</td>
		    						{% endif %}
		                    		
		                            <td>{{price.price}} €</td>
		                    		<td>{{product.pricekg}} €</td>
		
		    						<td>
										<a href="{{path('cart_add_product', {product_id : product_id, price_id : price.id})}}" class="btn btn-primary"> <i class="icon-plus icon-white"></i> Ajouter</a>
		                            </td>
		                		</tr>
		    				{% endfor %}
		            </tbody>
		        </table>
		    </div>
		</div>
		{% endif %}
	{% endfor %}
			
{% else %}
<div class="row-fluid">
    <div class="span12 text-right">
        <form action="" class="form-inline">
            <select name="" id="" class="span4">
                <option value="">50g &nbsp;&nbsp;&nbsp;&nbsp; - &nbsp; 12 € </option>
                <option value="">80g &nbsp;&nbsp;&nbsp;&nbsp; - &nbsp; 12 € </option>
                <option value="" selected="selected">100g &nbsp;&nbsp; - &nbsp; 12 € </option>
                <option value="">200g &nbsp;&nbsp; - &nbsp; 12 €</option>
                <option value="">300g &nbsp;&nbsp; - &nbsp; 12 €</option>
                <option value="">400g &nbsp;&nbsp; - &nbsp; 12 €</option>
                <option value="">500g &nbsp;&nbsp; - &nbsp; 12 €</option>
                <option value="">600g &nbsp;&nbsp; - &nbsp; 12 €</option>
                <option value="">700g &nbsp;&nbsp; - &nbsp; 12 €</option>
                <option value="">800g &nbsp;&nbsp; - &nbsp; 12 €</option>
                <option value="">900g &nbsp;&nbsp; - &nbsp; 12 €</option>
                <option value="">1000g &nbsp;- &nbsp; 12 €</option>
            </select>
            <button class="btn btn-primary"><i class="icon-plus icon-white"></i> Ajouter</button>
        </form>
    </div>
</div>
{% endif %}
