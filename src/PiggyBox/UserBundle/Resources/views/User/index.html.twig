<script>


$(document).ready(function() {

        /* Smooth Scroll Begin */
        $('a[href^="#"]').on('click',function (e) {
            e.preventDefault();
            var target = this.hash,
            $target = $(target);
            $('html, body').stop().animate({
                'scrollTop': $target.offset().top
            }, 900, 'swing', function () {
                window.location.hash = target;
            });
        });
        /* Smooth Scroll End */

        $('#testimonials-container').removeClass('hide');
        var theContent = $('ul.testimonials li');
        var theWidth = 695;
        var theHeight = 266;
        //wrap into mother div
        $('ul.testimonials').wrap('<div id="mother" />');
        //assign height width and overflow hidden to mother
        $('#mother').css({
            width: function() {
            return theWidth;
          },
            height: function() {
            return theHeight;
          },
            position: 'relative',
            overflow: 'hidden'
        });
            //get total of image sizes and set as width for ul
        var totalWidth = theContent.length * theWidth;
        $('ul.testimonials').css({
            width: function(){
            return totalWidth;
        }
        });

    }
);

window.setInterval(function(){
    //console.log("cool");
    var theContent = $('ul.testimonials li');
    $(theContent).each(
        function(intIndex){
            //console.log(intIndex);
            if ($(this).hasClass('current')) {
                $(this).parent('ul').animate({
                    "margin-left": (-(intIndex) * 695)
                }, 1000)
                $(this).removeClass('current');
                if ($(this).hasClass('last-item')) {
                    $(this).parent('ul').children().addClass('current');
                } else {
                    $(this).next().addClass('current');
                }
                return false;
            };
        }
    );
}, 5000);

</script>




