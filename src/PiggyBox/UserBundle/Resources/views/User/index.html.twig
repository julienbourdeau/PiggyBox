{% extends 'PiggyBoxUserBundle::layout.html.twig' %}

{% block content %}
<div id="">
        <div class="container text-centered">


            <div class="row bottom-marged">
                <div class="span12">
                    <div class="step-wrapper">
                        <div class="step-container">
                            <a href="{{ path('shops') }}" class="box stepbox">
                                <div class="step-number"><span>1</span></div>
                                <img src="{{ asset('bundles/piggyboxuser/img/pictos/step1.png')}}" alt="">
                                <h2>Recherchez</h2>
                                {# <p>Trouvez votre commerce à proximité</p> #}
                            </a>
                        </div>
                        <div class="step-container step-offset">
                            <a class="box stepbox">
                                <div class="step-number"><span>2</span></div>
                                <img src="{{ asset('bundles/piggyboxuser/img/pictos/step2.png')}}" alt="">
                                <h2>Commandez</h2>
                                {# <p>Passez votre commande au même tarif qu'en boutique</p> #}
                            </a>
                        </div>
                        <div class="step-container step-offset">
                            <a class="box stepbox">
                                <div class="step-number"><span>3</span></div>
                                <img src="{{ asset('bundles/piggyboxuser/img/pictos/step3.png')}}" alt="">
                                <h2>Retirez</h2>
                                {# <p>Allez chercher votre commande sans faire la queue</p> #}
                            </a>
                        </div>
                    </div>
                </div>
            </div>


            <div id="action-buttons" class="row bottom-marged">
                <div class="span12">
                    <a href="{{ path('shops') }}" id="" class="btn btn-xlarge btn-primary"><i class="icon-map-marker icon-white"></i> Rechercher sur Nantes</a>
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    <a href="{{ path('ccm') }}" class="btn btn-xlarge"><i class="icon-book"></i> Comprendre le site</a>
                </div>
            </div>


            <div class="row bottom-marged">
                <div class="span12">
                    <div class="black-bordered">
                        <a href="{{ path('shops') }}">
                            <img class="" src="{{ asset('bundles/piggyboxuser/img/bar1.jpg')}}" alt="">
                        </a>
                    </div>
                </div>
            </div>


        </div>
    </div>


    <div class="container">
        <div class="row big-quote bottom-marged">
            <div class="span12">
                <blockquote class="homepage">
                    <img src="{{ asset('bundles/piggyboxuser/img/quotes-open.png')}}" alt="" class="pull-left quotes-open">
                    <img src="{{ asset('bundles/piggyboxuser/img/quotes-close.png')}}" alt="" class="pull-right quotes-close">
                    <p class="text-centered">
                        La qualité et le service des commerces de proximité <br>
                        avec les avantages du drive
                    </p>
                </blockquote>
            </div>
        </div>
    </div>


	<div class="container">
		<div class="row bottom-marged">
			<div class="span12">
                <div id="launch-ribbon" class="text-centered clearfix">
                    <div class="dash-container">
    				    <h2>Déjà plusieurs partenaires sur Nantes
    					   <br>Bientôt encore plus de commerces et villes disponibles</h2>
                    </div>
    			</div>
    		</div>
    	</div>
    </div>


    <div class="container">
        <div class="row bottom-marged">
            <div class="span12">
                <div class="black-bordered">
                    <a href="{{ path('shops') }}">
                        <img class="" src="{{ asset('bundles/piggyboxuser/img/bar2.jpg')}}" alt="">
                    </a>
                </div>
            </div>
        </div>
    </div>




{% endblock %}

{% block javascript %}
{{parent()}}
        <script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script>
		<script src="{{ asset('bundles/piggyboxuser/js/home.js')}}"></script>

{% endblock %}
