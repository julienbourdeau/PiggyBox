{% for product in products %}

   		<div class="product-item Tous {{product.category.title}} {% if product.category.level > 0 %}{{product.category.parent.title}}{% endif %}">
			<div class="row-fluid product-infos">

				<div class="text-centered">
					<img src="{{product.getWebPath | apply_filter('my_thumb') }}" alt="" class="">
				</div>

				<div id="product-details" class="">

						<h6 class="no-margin">{{product.name}}</h6>
						<div id="prices" class="span4 text-right">
							<span class="primary-price">{{product.minprice}} â‚¬</span> <br />
						</div>
				</div>

			</div>

				<div class="btn" data-load-more="{{ path('view_product', {product_id: product.id, _format: 'json'}) }}">
					<i class="icon-plus"></i> Ajouter
				</div>

		</div>

	{% endfor %}
