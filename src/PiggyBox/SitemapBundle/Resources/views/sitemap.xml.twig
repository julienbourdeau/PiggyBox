<?xml version='1.0' encoding='UTF-8'?>
<urlset xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://www.sitemaps.org/schemas/sitemap/0.9 http://www.sitemaps.org/schemas/sitemap/0.9/sitemap.xsd
                             http://www.google.com/schemas/sitemap-image/1.1 http://www.google.com/schemas/sitemap-image/1.1/sitemap-image.xsd"
         xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
{% for shop in shops%}
    {% include "PiggyBoxSitemapBundle:Url:shops.xml.twig" with { 'shop': shop } %}
{% endfor %}

    <url>
        <loc>{{ path('home')|piggybox_sitemap_url_absolute}}</loc>
        <changefreq>daily</changefreq>
    </url>
    <url>
        <loc>{{ path('shops')|piggybox_sitemap_url_absolute}}</loc>
        <changefreq>daily</changefreq>
    </url>
    <url>
        <loc>{{ path('ccm')|piggybox_sitemap_url_absolute}}</loc>
        <changefreq>weekly</changefreq>
    </url>
    <url>
        <loc>{{ path('legal')|piggybox_sitemap_url_absolute}}</loc>
        <changefreq>weekly</changefreq>
    </url>
    <url>
        <loc>{{ path('about')|piggybox_sitemap_url_absolute}}</loc>
        <changefreq>weekly</changefreq>
    </url>
</urlset>
