    <parameters>
        <parameter key="piggy_box_order.provider.class">PiggyBox\OrderBundle\Provider\OrderProvider</parameter>
    </parameters>

    <services>
        <service id="piggy_box_order.provider" class="%piggy_box_order.provider.class%">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument type="service" id="piggy_box_order.session" />
        </service>

    <service id="piggy_box_order.twig.order_extension" class="PiggyBox\OrderBundle\Twig\OrderExtension">
        <argument type="service" id="service_container" />
        <tag name="twig.extension" />
    </service>

    <service id="piggy_box_order.session" class="PiggyBox\OrderBundle\Storage\SessionOrderStorage">
        <argument type="service" id="session" />
    </service>

</services>
</container>
