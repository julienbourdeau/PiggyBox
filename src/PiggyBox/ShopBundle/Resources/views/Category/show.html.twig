{% form_theme form "PiggyBoxShopBundle::form.html.twig" %}

<div class="row">
    <form action="{{ path('demo_category_save') }}" method="post">
      <fieldset>
      <legend>Add Category</legend>
        {{ form_row(form.title) }}
        {{ form_row(form.description) }}
        {{ form_rest(form) }}
        <div class="actions">
          <button class="btn primary" type="submit">Add</button>
        </div>
      </fieldset>
    </form>
</div>
